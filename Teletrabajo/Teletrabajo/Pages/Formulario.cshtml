        // Get the output text
        var text = document.getElementById(idDiv);

        var hidden = document.getElementById(idHidden);

        checkBox.addEventListener('click', () => {
            if (checkBox.checked == true) {
                text.style.display = "block";
                hidden.value = true;
                //console.log("True");
            } else {
                text.style.display = "none";
                hidden.value = false;
