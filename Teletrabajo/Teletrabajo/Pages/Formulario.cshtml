    function volCheckTrabajador(idChek, idDiv, idCheckN) {
        const Div = document.getElementById(idDiv);
        const Chk = document.getElementById(idChek);
        const ChkN = document.getElementById(idCheckN);

        Chk.addEventListener('click', () => {

            if (Chk.checked == true) {
                Div.hidden = false;
            }
        })

        ChkN.addEventListener('click', () => {

            if (ChkN.checked == true) {
                Div.hidden = true;
            }
        })
    }


    function domicilioDespliegue(idSelect, idDivDomicilio) {
        var select = document.getElementById(idSelect);
        var div = document.getElementById(idDivDomicilio);
        //console.log(div);

